@model Author


<h3 class="text-center">Yazar Güncelleme Sayfası</h3>

<form asp-controller="Author" asp-action="Edit" asp-area="Management" method="post">
    <div class="mb-3">
        <label class="form-label" asp-for="FirstName">İsim</label>
        <input type="text" class="form-control" asp-for="FirstName" />
    </div>

    <div class="mb-3">
        <label class="form-label" asp-for="LastName">Soyisim</label>
        <input type="text" class="form-control" asp-for="LastName" />
    </div>
    <button type="submit" class="btn btn-primary">Güncelle</button>

</form>